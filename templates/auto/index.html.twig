{% extends 'base.html.twig' %}

{% block title %}Hello AutoController!{% endblock %}

{% block body %}
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Model</th>
                <th scope="col">Type</th>
                <th scope="col">Kleur</th>
                <th scope="col">Gewicht</th>
                <th scope="col">Prijs</th>
                <th scope="col">Voorraad</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            {% for auto in autos %}
                <tbody>
                <tr>
                    <td>{{ auto.model }}</td>
                    <td>{{ auto.type }}</td>
                    <td>{{ auto.kleur }}</td>
                    <td>{{ auto.gewicht }}</td>
                    <td>{{ auto.prijs }}</td>
                    <td>{{ auto.voorraad }}</td>
                    <td><a href="{{ path('detail', {id: auto.id}) }}">details</a></td>
                    <td><a href="{{ path('update', {id: auto.id}) }}">update</a></td>
                    <td><a href="{{ path('delete', {id: auto.id}) }}">delete</a></td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
        <a href="{{ path('insert')}}">insert</a>
    </div>
{% endblock %}
